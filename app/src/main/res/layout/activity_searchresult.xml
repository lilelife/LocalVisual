<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_resulttext"
            android:layout_width="400px"
            android:layout_height="60px"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:text="@string/str_text1"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/iv_back2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back"
            android:layout_alignTop="@+id/tv_resulttext">
        </ImageView>

        <Button
            android:id="@+id/btn_refresh"
            android:layout_marginLeft="300dp"
            android:background="#00ffffff"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="刷新"></Button>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.baidu.mapapi.map.MapView
            android:id="@+id/baidu_map2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </com.baidu.mapapi.map.MapView>
        <Button
            android:id="@+id/btn_location2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/gps7">

        </Button>
    </RelativeLayout>
</LinearLayout>
