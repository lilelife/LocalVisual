<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lile.localvisual.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.baidu.mapapi.map.MapView
            android:id="@+id/baidumap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/search_frame"
            android:text="@string/str_search"></Button>

        <Button
            android:id="@+id/btn_location"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/gps7"></Button>
        <Button
            android:id="@+id/btn_to2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/gohere"
            android:visibility="gone"
            android:layout_marginBottom="11dp"
            android:layout_above="@+id/btn_location"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
        </Button>
        <TextView
            android:id="@+id/tv_to"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:visibility="gone"
            android:textSize="20dp"
            android:text="该点为："
            android:background="@drawable/btn4"
            android:layout_alignBottom="@+id/btn_location"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp">


        </TextView>
        <Button
            android:id="@+id/btn_switch2"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:visibility="gone"
            android:text="驾车切换"
            android:textSize="50px"
            android:textColor="#3091f2"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:layout_marginTop="90dp"
            android:layout_below="@+id/btn_search"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"></Button>
    </RelativeLayout>


</LinearLayout>
